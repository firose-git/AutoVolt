# MQTT Broker
MQTT_BROKER=192.168.0.108
MQTT_PORT=1883

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/autovolt
# Alternative: Use MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/autovolt
MONGODB_URI_FALLBACK=mongodb://localhost:27017/autovolt_backup

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_here_minimum_32_characters_long
JWT_EXPIRE=7d

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=0.0.0.0

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# API Keys for External Services
# CALENDAR_API_KEY=your_google_calendar_api_key
# CALENDAR_ID=your_calendar_id_for_holidays

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@your-domain.com

# Security Settings
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_ATTEMPTS=5

# ESP32 Device Configuration
ESP32_DEFAULT_TIMEOUT=5000
ESP32_MAX_RETRIES=3
ESP32_SECRET_KEY=your-esp32-device-secret-key
ESP32_MAX_CONNECTIONS=50

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Admin User (Created on first run)
ADMIN_EMAIL=admin@college.edu
ADMIN_PASSWORD=admin123456
ADMIN_NAME=System Administrator

# Google Calendar Integration - REMOVED

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook
